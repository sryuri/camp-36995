<div class="tweets-contents">

  <div class="tweets-main">
    <h2 class="title">Post a photo</h2>
    <%= form_with model: @tweet, url: tweets_path, local: true do |f| %>
  
    
    <div class="img-upload">
        image
      <div class="click-upload">
        <%= f.file_field :image, id:"tweet-image "%>
      </div>
    </div>
  
    
    <div class="tweet">
        tag
      <%= f.text_field :name, class:"categories-textbox", maxlength:"50" %> 
    </div>    
       
    <div class="tweet_text"> 
        text
      <%= f.text_area :text, class:"tweets-textbox mt-2", rows:"7" ,maxlength:"1000" %>
    </div>
  

   
    <div  class="text-center container mt-3">
      <div class="d-grid col-6 mx-auto">
        <%= f.submit "Post", class:"btn btn-secondary" %>
      </div>
      <div  class="text-center container">
        <%=link_to 'TOP', root_path, class:"btn btn-link mt-3 text-secondary"%>
      </div>  
    </div>  
    <% end %>
  </div>
</div>
